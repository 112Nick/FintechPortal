<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customWhite">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout
                android:id="@+id/avatar_and_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/ic_launcher_background"/>

            <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="120dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/customWhite"
                    android:text="Иван Иванов"/>

            <TextView
                    android:id="@+id/email_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="165dp"
                    android:textSize="18sp"
                    android:textColor="@color/customWhite"
                    android:text="ivanov@mail.ru"/>


        </FrameLayout>


        <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/avatar_and_name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Пара слов о себе, бла бла бла ба лофЫТВЛОФ лдотваылот"/>

        <ImageView
                android:id="@+id/contacts_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/about"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/contacts"/>

        <TextView
                android:id="@+id/contacts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about"
                android:layout_toEndOf="@+id/contacts_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Контактная информация"/>



        <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/contacts_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Мобильный телефон"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/phone_number_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Электронная почта"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/email_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Город проживания"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
                android:id="@+id/education_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/city_layout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/education"/>

        <TextView
                android:id="@+id/education_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_layout"
                android:layout_toEndOf="@+id/education_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Образование"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/school_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/education_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Школа"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/school_year_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/school_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/school_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Год окончания школы"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/university_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/school_year_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/university"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="ВУЗ"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/department_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/university_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Кафедра"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/faculty_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/department_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/faculty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Факультет"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/university_year_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/faculty_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/university_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Год окончания ВУЗа"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
                android:id="@+id/work_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/university_year_layout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/work"/>

        <TextView
                android:id="@+id/work_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/university_year_layout"
                android:layout_toEndOf="@+id/work_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Работа"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/work_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/work_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/work"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:inputType="none"
                    android:hint="Текущее место работы"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:id="@+id/edit_button"
                android:layout_alignParentEnd="true"
                android:src="@drawable/edit"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="26dp"/>

    </RelativeLayout>


</ScrollView>