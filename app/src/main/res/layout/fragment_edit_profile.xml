<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/customWhite">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="16dp"
                android:background="@drawable/fintech_logo"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/fullname_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="ФИО"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
                android:id="@+id/date_of_birth_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_toEndOf="@+id/avatar"
                android:layout_below="@+id/fullname_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Дата рождения"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
                android:id="@+id/about_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/avatar"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Пара слов о себе"/>
        </android.support.design.widget.TextInputLayout>

       <ImageView
               android:id="@+id/contacts_icon"
               android:layout_width="26dp"
               android:layout_height="26dp"
               android:layout_below="@+id/about_layout"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="16dp"
               android:background="@drawable/contacts"/>

        <TextView
                android:id="@+id/contacts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_layout"
                android:layout_toEndOf="@+id/contacts_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Контактная информация"/>



        <android.support.design.widget.TextInputLayout
                android:id="@+id/phone_number_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/contacts_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Мобильный телефон"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/phone_number_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Электронная почта"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/email_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Город проживания"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
                android:id="@+id/education_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/city_layout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/education"/>

        <TextView
                android:id="@+id/education_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city_layout"
                android:layout_toEndOf="@+id/education_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Образование"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/school_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/education_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Школа"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/school_year_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/school_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/school_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Год окончания школы"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/university_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/school_year_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/university"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="ВУЗ"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/department_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/university_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/department"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Кафедра"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/faculty_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/department_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/faculty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Факультет"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/university_year_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/faculty_layout"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/university_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Год окончания ВУЗа"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
                android:id="@+id/work_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@+id/university_year_layout"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/work"/>

        <TextView
                android:id="@+id/work_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/university_year_layout"
                android:layout_toEndOf="@+id/work_icon"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/customBlack"
                android:text="Работа"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/work_layout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@+id/work_icon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp">
            <EditText
                    android:id="@+id/work"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textColor="@color/customBlack"
                    android:hint="Текущее место работы"/>
        </android.support.design.widget.TextInputLayout>

        <Button
                android:id="@+id/cancel_btn"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="22dp"
                android:textColor="@color/customDarkGrey"
                android:background="@color/customWhite"
                android:layout_below="@+id/work_layout"
                android:text="Отменить"/>

        <Button
                android:id="@+id/save_btn"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="22dp"
                android:layout_alignParentEnd="true"
                android:background="@color/customBlue"
                android:textColor="@color/customWhite"
                android:layout_below="@+id/work_layout"
                android:text="Сохранить"/>

    </RelativeLayout>

</ScrollView>